<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Allgemeine Einstellungen</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.rootpage>
                        <TCEforms>
                            <label>ID des Mandanten</label>
                            <config>
                                <type>group</type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.rootpage>
                    <settings.directories>
                        <TCEforms>
                            <label>Nur Dateien aus folgenden Verzeichnissen (inkl. Unterverzeichnissen) anzeigen (leer = alle)</label>
                            <config>
                                <type>folder</type>
                                <size>5</size>
                                <maxitems>999</maxitems>
                                <minitems>0</minitems>
                            </config>
                        </TCEforms>
                    </settings.directories>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>