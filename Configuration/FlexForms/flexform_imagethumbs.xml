<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Allgemeine Einstellungen</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.rootpage>
                        <TCEforms>
                            <label>ID des Mandanten</label>
                            <config>
                                <type>group</type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.rootpage>
                    <settings.extensions>
                        <TCEforms>
                            <label>Referenzen aus Erweiterungen anzeigen</label>
                            <description>tt_content und pages werden automatisch ausgelesen.</description>
                            <config>
                                <type>select</type>
                                <renderType>selectCheckBox</renderType>
                                <itemsProcFunc>Extension14v\Imagecredits14v\Utility\ForeignContentReferences->getForeignContents</itemsProcFunc>
                                <maxitems>9999</maxitems>
                                <size>5</size>
                                <multiple>1</multiple>
                            </config>
                        </TCEforms>
                    </settings.extensions>
                    <settings.directories>
                        <TCEforms>
                            <label>Nur Dateien aus folgenden Verzeichnissen (inkl. Unterverzeichnissen) anzeigen (leer = alle)</label>
                            <config>
                                <type>folder</type>
                                <size>5</size>
                                <maxitems>999</maxitems>
                                <minitems>0</minitems>
                            </config>
                        </TCEforms>
                    </settings.directories>
                    <settings.ignore>
                        <TCEforms>
                            <label>Referenzen auf folgenden Seiten ignorieren</label>
                            <description>inkl. Unterseiten</description>
                            <config>
                                <type>group</type>
                                <allowed>pages</allowed>
                                <size>5</size>
                                <maxitems>999</maxitems>
                                <minitems>0</minitems>
                            </config>
                        </TCEforms>
                    </settings.ignore>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>